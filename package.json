{
  "name": "saas-ai-assistant",
  "version": "1.0.0",
  "description": " AI WhatsApp Assistant - مساعد واتساب ذكي بالذكاء الاصطناعي",
  "private": false,
  "main": "apps/backend/simple-server.js",
  "scripts": {
    "start": "node apps/backend/simple-server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",       
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:frontend": "cd frontend-simple && npm run dev",
    "build": "npm run install:backend",
    "install:backend": "cd apps/backend && npm install",
    "install:frontend": "cd frontend-simple && npm install", 
    "install:all": "npm run install:backend && npm run install:frontend",
    "test": "echo \"No tests specified\"",
    "postinstall": "npm run install:backend",
    "pm2:start": "pm2 start apps/backend/simple-server.js --name whatsapp-bot",
    "pm2:stop": "pm2 stop whatsapp-bot",
    "pm2:restart": "pm2 restart whatsapp-bot",
    "pm2:logs": "pm2 logs whatsapp-bot",
    "pm2:status": "pm2 status",
    "deploy": "npm install && npm start"
  },
  "dependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "whatsapp",
    "bot", 
    "ai",
    "assistant",
    "chatbot",
    "openai",
    "gpt4",
    "nodejs",
    "express",
    "arabic",
    "pm2"
  ],
  "author": "hamam2022",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hamam2022/saas-ai-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/hamam2022/saas-ai-assistant/issues"
  },
  "homepage": "https://github.com/hamam2022/saas-ai-assistant#readme"
}
